{% extends 'base.html.twig' %}

{% block title %}Fiche artiste{% endblock %}

{% block body %}
<h1 class="pt-2 text-center">Fiche de l'artiste</h1>
<hr>
<div class="row pt-2">
{% set nbAlbums = lesArstiste.albums|length %}
<div class="card mb-3">
        <h3 class="card-header"> {{lesArstiste.nom}} </h3>
        <div class="row">
            <div class="col-3 d-flex align-items-center mx-auto"></div>
        <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
            <rect width="100%" height="100%" fill="#868e96"></rect>
            <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>    
        </div>
        <div class="col">
        <div class="card-body">
            <h5 class="card-title">
                <a href="" class="badge badge-success"> {{nbAlbums}} {% if nbAlbums> 1 %} albums {% else %}album{% endif %}</a>
            </h5>
            </div>
        </svg>
        <div class="card-body">
            <p class="card-text"> {{lesArstiste.description|slice(0,200)|raw}}</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"> {% if leArstiste.type == 0 %} Artiste solo {% else %} Groupe{% endif %}</li>
            <li class="list-group-item">
                {% set nb = leAlbum.morceaux|length %}
        </ul>
    </div>
</div>
<table class="table table-hover mx-auto">
  <thead>
    <tr>
      <th scope="col-3">Photo</th>
      <th scope="col-4">Nom</th>
      <th scope="col-1">Date</th>
      <th scope="col-3">Syles</th>
      <th scope="col-1">Morceaux</th>
    </tr>
  </thead>
  <tbody>
  {% for leAlbum in leArstiste.albums %}
          <tr>
                <td> <img class="miniature" src="{{leAlbum.image}}" alt""></td>
                <td scope="row"> <a href="{{path('ficheAlbum',{'id': leAlbum.id})}}">{{leAlbum.nom}}</a> </td>
              <td>{{leAlbum.date}}</td>
              <td></td>
              <td>{{leAlbum.morceaux|length}}</td>
            </tr>
  {% endfor %}  
  </tbody>
</table>

{% endblock %}
